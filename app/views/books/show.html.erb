<div class="body">
  <div class="container">
     <div class="row">
     	<%= render 'users/a', user: @book.user, book: @newbook %>
     	<div class="col-xs-9">
       
    
     <h3>Book detail</h3>
    <table class="table table-striped">
     <thead>
     <tr>
      
     <th>
     <th colspan="3"></th>
     </tr>
     </thead>

     <tbody>
     
     <tr>
      <th><%= link_to attachment_image_tag(@book.user, :profile_image, :fill,40,40, fallback: "no_image.jpg",size: "40x40"), user_path(@book.user.id)%></th>
     <th colspan="3"></th>
      <td><%= @book.title %><td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book)%></td>
      <td><%= link_to "Destroy",book_path(@book),method: :delete %>
        <% end %>
      <tr>
      <td><%= link_to @book.user.name, user_path(@book.user.id) %></td>
      </tr>
      
     </tbody>
     </table>
   </div>
  </div>
 </div>
</div>
