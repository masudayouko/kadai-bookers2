
 <div class="body">
  <div class="container">
    <p id="notice"></p>
     <div class="row">
      <%= render 'a', user: @user, book: @book %>
  <div class="col-xs-9">

     <h1>Books</h1>
    <table class="table table-striped">
     <thead>
     <tr>
     <th></th>
     <th colspan="2">Title</th>
     <th>opinion</th>
     <th colspan="2"></th>
     </tr>
     </thead>

     <tbody>
     <% @books.each do |book| %>
     <tr>
       <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size: "60x60" %></td>

      <td><%= link_to book.title,book_path(book) %><td>
      <td><%= book.body %></td>
      </tr>
      <% end %>
     </tbody>
     </table>
   </div>
  </div>
 </div>
</div>